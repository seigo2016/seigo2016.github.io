---
import { skills, skillAbstract } from '../data/skills';
---
<div id="skills" class="container justify-center w-full flex flex-col items-center">
  <div class="w-full text-center">
    <h2 class="text-3xl my-4 font-bold text-gray-900 leading-tight mb-2 border-t-4 border-b-4 border-gray-600 py-4">Skills</h2>
    <div>
      <div class="grid lg:grid-cols-3 gap-4 md:grid-cols-2 grid-cols-1">
        { skills.map((skill) => 
          <div class="bg-white p-4 rounded-lg shadow-md">
            <div class="text-center justify-center flex flex-col">
              <img src={`images/logo/${skill.icon}`} alt={skill.name} class="h-16 mx-auto">
              <h3 class="text-xl font-semibold mt-2">{ skill.name }</h3>
            </div>
            <p class="mt-4">{ skill.description }</p>
          </div>
          )
        }
      </div>
      <div class="grid lg:grid-cols-6 gap-2 mt-4 grid-cols-1 md:grid-cols-4">
        {
          skillAbstract.map((skill) => 
            <div class="bg-white p-2 rounded-lg shadow-md">
              <div class="text-center justify-center flex flex-col">
                {/* <img src={`images/logo/${skill.icon}`} alt={skill.name} class="h-8 mx-auto"> */}
                <h3 class="text-lg  mt-2">{ skill.name }</h3>
              </div>
            </div>
          )
        }
      </div>
    </div>
  </div>
</div>