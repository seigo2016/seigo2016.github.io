---
import { projects } from '../data/projects';

const professionalProjects = projects.filter(project => project.category === 'professional');

function getImageSrc(image: string): string {
  if (image.startsWith('http://') || image.startsWith('https://')) {
    return image;
  }
  return `images/contents_images/${image}`;
}
---

<div id="projects" class="w-full flex lg:flex-row flex-col">
  <div class="w-full text-center">
    <h2 class="text-3xl my-4 font-bold text-gray-900 leading-tight mb-2 border-t-4 border-b-4 border-gray-600 py-4">Projects</h2>
    <div class="grid lg:grid-cols-2 gap-6 grid-cols-1">
      {professionalProjects.map(project => 
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow text-left">
          <div class="flex items-start gap-4">
            <img src={getImageSrc(project.image)} alt={project.name} class="h-24 w-24 rounded-lg object-cover flex-shrink-0" />
            <div class="flex-1">
              <h3 class="text-lg font-bold text-gray-900 mb-1">{project.name}</h3>
              <div class="text-xs flex flex-row flex-wrap gap-1 mb-2">
                {project.tags.map(tag => 
                  <span class="bg-gray-200 dark:bg-gray-700 dark:text-white rounded-full px-2 py-1">{tag}</span>
                )}
              </div>
            </div>
          </div>
          
          <p class="text-sm text-gray-700 mt-3 mb-3">{project.description}</p>
          
          {project.challenge && (
            <div class="mb-3">
              <h4 class="text-xs font-semibold text-gray-700 mb-1">課題</h4>
              <p class="text-xs text-gray-600">{project.challenge}</p>
            </div>
          )}
          
          {project.role && (
            <div class="mb-3">
              <h4 class="text-xs font-semibold text-gray-700 mb-1">役割</h4>
              <p class="text-xs text-gray-600">{project.role}</p>
            </div>
          )}
          
          {project.outcome && (
            <div class="mb-3">
              <h4 class="text-xs font-semibold text-gray-700 mb-1">成果</h4>
              <p class="text-xs text-gray-600">{project.outcome}</p>
            </div>
          )}
          
          <div class="mt-4 flex gap-2">
            {project.url.map(url =>
              <a href={url.url} class="text-sm text-blue-800 dark:text-blue-400 hover:underline flex items-center gap-1" target="_blank" rel="noopener noreferrer">
                <i class="fa fa-external-link-alt text-xs"></i>
                {url.name}
              </a>
            )}
          </div>
        </div>
      )}
    </div>
  </div>
</div>
