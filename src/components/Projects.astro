---
import { Image } from 'astro:assets';
import type { Lang } from '../i18n/config';
import { useTranslations } from '../i18n/utils';
import { getProjectsData } from '../data';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const projects = getProjectsData(lang);

const professionalProjects = projects.filter(project => project.category === 'professional');

// 画像のインポート
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/*.{jpeg,jpg,png,gif,webp}');

async function getImage(imageName: string) {
  if (imageName.startsWith('http://') || imageName.startsWith('https://')) {
    return null; // 外部URL
  }
  const imagePath = `/src/assets/images/${imageName}`;
  const imageModule = images[imagePath];
  if (!imageModule) return null;
  return (await imageModule()).default;
}

// 各プロジェクトの画像を事前ロード
const projectsWithImages = await Promise.all(
  professionalProjects.map(async (project) => ({
    ...project,
    imageData: await getImage(project.image),
  }))
);
---

<div id="projects" class="w-full flex lg:flex-row flex-col px-4 md:px-8 lg:px-16">
  <div class="w-full text-center">
    <h2 class="text-3xl my-4 font-bold text-gray-900 leading-tight mb-2 border-t-4 border-b-4 border-gray-600 py-4">{t('projects.title')}</h2>
    <div class="grid lg:grid-cols-2 gap-6 grid-cols-1">
      {projectsWithImages.map(project =>
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow text-left">
          <div class="flex items-start gap-4">
            {project.imageData ? (
              <Image
                src={project.imageData}
                alt={project.name}
                width={96}
                height={96}
                class="h-24 w-24 rounded-lg object-cover flex-shrink-0"
                loading="lazy"
              />
            ) : (
              <img src={project.image} alt={project.name} class="h-24 w-24 rounded-lg object-cover flex-shrink-0" />
            )}
            <div class="flex-1">
              <h3 class="text-lg font-bold text-gray-900 mb-1">{project.name}</h3>
              <div class="text-xs flex flex-row flex-wrap gap-1 mb-2">
                {project.tags.map(tag =>
                  <span class="bg-gray-200 rounded-full px-2 py-1">{tag}</span>
                )}
              </div>
            </div>
          </div>

          <p class="text-sm text-gray-700 mt-3 mb-3">{project.description}</p>

          {project.challenge && (
            <div class="mb-3">
              <h4 class="text-xs font-semibold text-gray-700 mb-1">{t('projects.challenge')}</h4>
              <p class="text-xs text-gray-600">{project.challenge}</p>
            </div>
          )}

          {project.role && (
            <div class="mb-3">
              <h4 class="text-xs font-semibold text-gray-700 mb-1">{t('projects.role')}</h4>
              <p class="text-xs text-gray-600">{project.role}</p>
            </div>
          )}

          {project.outcome && (
            <div class="mb-3">
              <h4 class="text-xs font-semibold text-gray-700 mb-1">{t('projects.outcome')}</h4>
              <p class="text-xs text-gray-600">{project.outcome}</p>
            </div>
          )}

          <div class="mt-4 flex gap-2">
            {project.url.map(url =>
              <a href={url.url} class="text-sm text-blue-800 hover:underline flex items-center gap-1" target="_blank" rel="noopener noreferrer">
                <i class="fa fa-external-link-alt text-xs"></i>
                {url.name}
              </a>
            )}
          </div>
        </div>
      )}
    </div>
  </div>
</div>
