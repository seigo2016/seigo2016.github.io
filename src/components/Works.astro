---
import type { Lang } from '../i18n/config';
import { useTranslations, formatDate, formatDateFull } from '../i18n/utils';
import { getWorksData } from '../data';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const { works, otherWorks } = getWorksData(lang);
---

<div id="works" class="w-full flex lg:flex-row flex-col px-4 md:px-8 lg:px-16">
  <div class="w-full">
    <h2 class="text-3xl my-4 font-bold text-gray-900 leading-tight mb-2 border-t-4 border-b-4 border-gray-600 py-4 text-center">{t('works.title')}</h2>
    <div class="flex flex-col justify-center items-center gap-4">
      {works.map(work => (
        <div class="w-full md:w-3/4 lg:w-2/3">
          <details class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
            <summary class="cursor-pointer p-4 hover:bg-gray-50 rounded-lg touch-manipulation min-h-[60px] flex flex-col md:flex-row md:items-center md:justify-between">
              <div class="flex-1 text-left">
                <div class="flex items-center gap-2">
                  <i class="fa fa-solid fa-building text-gray-600"></i>
                  <span class="font-semibold text-gray-900">{work.companyName}</span>
                </div>
                {work.role && (
                  <div class="text-sm text-gray-600 mt-1 ml-6">{work.role}</div>
                )}
              </div>
              <div class="text-sm text-gray-500 md:text-right mt-2 md:mt-0">
                {work.dateRanges.map((dateRange) => (
                  <div>
                    {formatDate(dateRange.since, lang)} ~ {dateRange.until ? formatDate(dateRange.until, lang) : t('works.present')}
                  </div>
                ))}
              </div>
            </summary>

            <div class="px-6 pb-6 pt-4 border-t bg-gray-50">
              {work.responsibilities && work.responsibilities.length > 0 && (
                <div class="mb-4">
                  <h4 class="font-bold text-gray-800 mb-2 text-base">{t('works.responsibilities')}</h4>
                  <ul class="list-disc list-inside text-gray-700 space-y-1 text-base">
                    {work.responsibilities.map(resp => (
                      <li>{resp}</li>
                    ))}
                  </ul>
                </div>
              )}

              {work.achievements && work.achievements.length > 0 && (
                <div class="mb-4">
                  <h4 class="font-bold text-gray-800 mb-2 text-base">{t('works.achievements')}</h4>
                  <ul class="list-disc list-inside text-gray-700 space-y-1 text-base">
                    {work.achievements.map(achievement => (
                      <li>{achievement}</li>
                    ))}
                  </ul>
                </div>
              )}

              {work.technologies && work.technologies.length > 0 && (
                <div>
                  <h4 class="font-bold text-gray-800 mb-3 text-base">{t('works.technologies')}</h4>
                  <div class="flex flex-wrap gap-2">
                    {work.technologies.map(tech => (
                      <span class="text-sm bg-blue-100 text-blue-800 px-3 py-1 rounded font-medium">{tech}</span>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </details>
        </div>
      ))}
    </div>

    <details class="w-full md:w-3/4 lg:w-2/3 my-4 mx-auto">
      <summary class="cursor-pointer text-base font-semibold text-gray-700 hover:text-gray-900 py-2 px-4 bg-gray-100 hover:bg-gray-200 rounded border touch-manipulation min-h-[44px] flex items-center">
        {t('works.shortterm')}
      </summary>
      <ul class="mt-2 mx-4">
        {otherWorks.map(work => (
          <li class="w-full my-1 mx-auto">
            <div class="flex md:flex-row flex-col md:items-center p-3 text-base text-gray-900 rounded-lg bg-gray-50 group">
              <div class="flex-row text-left">
                <span class="ms-3 whitespace-break-spaces break-words">
                  <i class="fa fa-solid fa-building m-1"></i>
                  {work.companyName}
                </span>
              </div>
              <div class="flex-col flex ms-auto text-sm text-gray-500">
                {work.dateRanges.map(dateRange => (
                  <span>
                    {formatDateFull(dateRange.since, lang)} ~ {dateRange.until ? formatDateFull(dateRange.until, lang) : t('works.present')}
                  </span>
                ))}
              </div>
            </div>
          </li>
        ))}
      </ul>
    </details>
  </div>
</div>
