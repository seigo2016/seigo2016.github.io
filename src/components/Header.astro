---
import type { Lang } from '../i18n/config';
import { useTranslations } from '../i18n/utils';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const basePath = `/${lang}`;
---

<header class="bg-white">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <a href={basePath} class="-m-1.5 p-1.5">
        <div class="flex items-center gap-2">
          <img src="/images/seigo2016-icon-small.svg" class="h-8"/>
          <p>seigo2016</p>
        </div>
      </a>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <a href={basePath} class="text-sm font-semibold leading-6 text-gray-900">{t('nav.home')}</a>
      <a href={`${basePath}#works`} class="text-sm font-semibold leading-6 text-gray-900">{t('nav.works')}</a>
      <a href={`${basePath}#projects`} class="text-sm font-semibold leading-6 text-gray-900">{t('nav.projects')}</a>
      <a href={`${basePath}#achievements`} class="text-sm font-semibold leading-6 text-gray-900">{t('nav.achievements')}</a>
      <a href={`${basePath}#articles`} class="text-sm font-semibold leading-6 text-gray-900">{t('nav.articles')}</a>
      <LanguageSwitcher lang={lang} />
    </div>
  </nav>
  <div class="lg:hidden" role="dialog" aria-modal="true">
    <div class="fixed top-0 right-0 w-full overflow-y-auto bg-white px-6 py-6 lg:max-w-sm lg:ring-1 lg:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <a href={basePath} class="-m-1.5 p-1.5">
          <div class="flex items-center">
            <img src="/images/seigo2016-icon-small.svg" class="h-8"/>
            <p class="font-bold leading-6 ml-4 text-md">seigo2016.com</p>
          </div>
        </a>
        <button id="menu-button" type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
          <svg class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
      <div id="menu" class="mt-6 hidden">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <a href={`${basePath}#home`} class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">{t('nav.home')}</a>
            <a href={`${basePath}#works`} class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">{t('nav.works')}</a>
            <a href={`${basePath}#projects`} class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">{t('nav.projects')}</a>
            <a href={`${basePath}#achievements`} class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">{t('nav.achievements')}</a>
            <a href={`${basePath}#articles`} class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">{t('nav.articles')}</a>
            <div class="px-3 py-2">
              <LanguageSwitcher lang={lang} />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.getElementById('menu-button')?.addEventListener('click', function() {
      document.getElementById('menu')?.classList.toggle('hidden');
      document.getElementById('menu-button')?.querySelectorAll('svg').forEach(function(svg) {
        svg.classList.toggle('hidden');
      });
    });
  </script>
</header>
