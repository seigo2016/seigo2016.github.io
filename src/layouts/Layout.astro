---
import type { Lang } from '../i18n/config';

interface Props {
	title: string;
	lang: Lang;
	description?: string;
}

const { title, lang, description = "seigo2016 Portfolio" } = Astro.props;

import '@fontsource-variable/noto-sans-jp';
import '../styles/globals.css';
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta property="og:image" content="https://blog.seigo2016.com/posts/ogp/seigo2016-icon-small.webp" />
		<meta name="description" content={description} />
		<meta property="og:locale" content={lang === 'ja' ? 'ja_JP' : 'en_US'} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />

		<!-- hreflang tags for SEO -->
		<link rel="alternate" hreflang="ja" href="https://seigo2016.com/ja/" />
		<link rel="alternate" hreflang="en" href="https://seigo2016.com/en/" />
		<link rel="alternate" hreflang="x-default" href="https://seigo2016.com/ja/" />

		<script src="https://kit.fontawesome.com/5ee89fe49f.js" crossorigin="anonymous"></script>
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
